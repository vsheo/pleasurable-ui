<div class="detail-line-second"></div>

<form
  method="post"
  action="/cadeau/{{ gift.slug}}/{{ gift.id}}"
  data-enhanced="form-{{ gift.id }}">
  {% if bookmarks contains gift.id %}
    <button class="btn-save-to-list" aria-label="verwijder uit bookmarks lijst">
      <picture>
        <source type="image/avif" srcset="/assets/saved.avif">
        <source type="image/webp" srcset="/assets/saved.webp">
        <img
          class="img-save-detail"
          src="/assets/saved.svg"
          width="41"
          height="28"
          alt="opgeslagen">
      </picture>
      <p class="tekst-save-detail slug">Verwijder uit lijst</p>
    </button>
  {% else %}
    <button class="btn-save-to-list" aria-label="voeg toe aan bookmarks lijst">
      <picture>
        <source type="image/avif" srcset="/assets/notsaved.avif">
        <source type="image/webp" srcset="/assets/notsaved.webp">
        <img
          class="img-save-detail"
          src="/assets/notsaved.svg"
          width="45"
          height="41"
          alt="niet opgeslagen">
      </picture>
      <p class="tekst-save-detail slug">Opslaan in lijst</p>
    </button>
  {% endif %}
</form>

<div class="detail-line-second"></div>

{% comment %} <p class="tekst-save-detail slug">Opslaan in lijst</p> {% endcomment %}

<section class="container-tags">
  <div class="heading-occasion">
    <img
      src="/assets/occasion.svg"
      width="40"
      height="40"
      alt="">
    <h3 class="occasion">Gelegenheid</h3>
  </div>
  <div class="container-occasion">
    {%- assign detailTags = gift.tags | remove: "'" | split: ',' -%}
    {% for tags in detailTags limit: 9 -%}
      <p class="tags">{{ tags }}</p>
    {%- endfor %}
  </div>
</section>

<div class="detail-line-second"></div>

<section class="section-also-like">
  <h3 class="section-title">You may also like</h3>
  <ul class="container-carrousel">
    {% for gift in allGifts %}
      <li class="item-carrousel">
        {% include 'partials/giftcard.liquid'
          , gift: gift %}
      </li>
    {% endfor %}
    <li class="item-carrousel placeholder-gift slug">
      <a href="/" class="index-link description-cadeau">Meer Resulaten</a>
    </li>
  </ul>
</section></main>