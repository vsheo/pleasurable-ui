{% render 'partials/head.liquid'
  , title: gift.name %}


<main class="detail-page">
  <section class="detail-layout">

    <div class="detail-wrapper">
      <img
        src="/assets/spotter-img.png"
        width="40"
        height="40"
        class="detail-spotterimages"
        alt="Spotter" />
      <p class="detail-spotter">Spotter door {{ gift.spotter }}</p>
    </div>

    <div class="detail-line"></div>

    <div class="detail-picture">
      <picture>
        <source type="image/avif" srcset="https://fdnd-agency.directus.app/assets/{{ gift.img.id }}?format=webp&width=300&height=300">
        <source type="image/webp" srcset="https://fdnd-agency.directus.app/assets/{{ gift.img.id }}?format=webp&width=300&height=300">
        <img
          src="https://fdnd-agency.directus.app/assets/{{ gift.img.id }}"
          alt="{{ gift.name }}"
          class="detail-img"
          sizes="600px, 600vw" />
      </picture>
    </div>

    <div class="detail-text-block">
      <h2 class="detail-title">{{ gift.name }}</h2>

      <p class="detail-price">
        <span class="detail-currency">€</span>
        {{ gift.amount }}</p>

      <p class="detail-description">{{ gift.description }}</p>
    </div>
  </section>
</main>

<div class="detail-line-second"></div>

{% comment %} why this gift {% endcomment %}
<section class="why-this-gift">
  why-this-gift</section>

<div class="detail-line-second"></div>

